<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.agenciabancaria.OperacoesController">
    <children>
        <Pane fx:id="basePane" prefHeight="600.0" prefWidth="800.0">
            <children>
                <ToolBar prefHeight="40.0" prefWidth="800.0">
                    <items>
                        <Button fx:id="voltarBtn" mnemonicParsing="false" onAction="#onVoltarClicked" text="&lt; Voltar" />
                        <Label text="Operações">
                            <padding>
                                <Insets left="10.0" />
                            </padding>
                        </Label>
                    </items>
                </ToolBar>
                <Pane layoutY="40.0" prefHeight="563.0" prefWidth="424.0">
                    <children>
                        <ListView fx:id="list" prefHeight="563.0" prefWidth="424.0" />
                    </children></Pane>
                <Pane layoutX="425.0" layoutY="40.0" prefHeight="563.0" prefWidth="375.0">
                    <children>
                        <Label layoutX="14.0" layoutY="53.0" text="Conta corrente" />
                        <ComboBox fx:id="contaCorrenteComboBox" layoutX="14.0" layoutY="68.0" prefHeight="23.0" prefWidth="341.0" />
                        <Label layoutX="14.0" layoutY="101.0" text="Tipo da operação" />
                        <ComboBox fx:id="tipoOperacaoComboBox" layoutX="14.0" layoutY="116.0" prefHeight="23.0" prefWidth="341.0" />
                        <Label layoutX="14.0" layoutY="149.0" text="Descrição" />
                        <TextField fx:id="descricaoTextField" layoutX="14.0" layoutY="164.0" prefHeight="23.0" prefWidth="341.0" />
                        <Button layoutX="14.0" layoutY="245.0" mnemonicParsing="false" onAction="#onCreate" text="Salvar" />
                        <Label layoutX="14.0" layoutY="10.0" text="Nova operação">
                            <font>
                                <Font name="System Bold" size="13.0" />
                            </font>
                        </Label>
                  <Label layoutX="14.0" layoutY="197.0" text="Valor (R$)" />
                  <TextField fx:id="valorTextField" layoutX="14.0" layoutY="212.0" prefHeight="23.0" prefWidth="341.0" />
                    </children>
                </Pane>
            </children>
        </Pane>
    </children>
</AnchorPane>
